{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/code-review-findings.schema.json",
  "title": "Code Review Findings Bundle",
  "type": "object",
  "required": ["version", "agent", "timestamp", "findings"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "agent": {
      "type": "string",
      "enum": ["claude-code", "cursor", "gpt"]
    },
    "timestamp": {
      "type": "string"
    },
    "pr": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "number": {
          "type": "integer"
        },
        "url": {
          "type": "string"
        },
        "branch": {
          "type": "string"
        },
        "sha": {
          "type": "string"
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "reason",
          "confidence",
          "file",
          "lineStart",
          "lineEnd",
          "sha",
          "url"
        ],
        "additionalProperties": true,
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "reason": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "file": {
            "type": "string",
            "minLength": 1
          },
          "lineStart": {
            "type": "integer",
            "minimum": 1
          },
          "lineEnd": {
            "type": "integer",
            "minimum": 1
          },
          "sha": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "detail": {
            "type": "string"
          },
          "guidelineFile": {
            "type": ["string", "null"]
          },
          "guidelineQuote": {
            "type": ["string", "null"]
          }
        }
      }
    }
  }
}
